<div class="container" id="topContainer">
    <div class="col-sm-4" id="leftPane">
        <div class="inputs">
            <label class="c-input c-checkbox">
                <span class="c-indicator"></span>
                Only show sitters with a Rating Score of
            </label>

            <div class="input-group min-max-words">
                <div class="input-group">
                    <span class="input-group-addon">At least</span>
                    <input type="text" class="form-control" id="minwords" tabindex=3>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">At most</span>
                    <input type="text" class="form-control" id="maxwords" tabindex=4>
                </div>
            </div>

            <div class="input-group min-max-words-slider">
                <input id="minMaxWordsSlider" data-slider-id='minMaxWordsSlider' type="text" data-slider-min="0" data-slider-max="5.0" data-slider-step="0.1" data-slider-value="0" />
            </div>
        </div>
    </div>

    <div class="col-sm-8">
        <div class="list-container">
            <ul class="list-group">
                <% @sitters.each do |sitter| %>
                    <li class="list-group-item">
                        <%= image_tag sitter.image_url, size: "32x32", alt: "Sitter Photo" %>
                        <span><%= sitter.name %></span>
                        <span class="label label-default label-pill pull-right">Score: <%= '%.2f' % sitter.ratings_score %></span>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
